local UI = {}
local Players = game:GetService("Players")
local player = Players.LocalPlayer

function UI:Init()
    local ScreenGui = Instance.new("ScreenGui", player.PlayerGui)
    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size, Frame.Position, Frame.BackgroundTransparency = UDim2.new(0.3, 0, 0.4, 0), UDim2.new(0.35, 0, 0.3, 0)

    local List = Instance.new("ScrollingFrame", Frame)
    List.Size, List.BackgroundTransparency, List.AutomaticCanvasSize = UDim2.new(1, 0, 1, 0), 1, Enum.AutomaticSize.Y
    
    UI.Frame, UI.List = Frame, List
end

function UI.AddResult(scriptPath)
    local Text = Instance.new("TextLabel", UI.List)
    Text.Size, Text.Text, Text.TextColor3 = UDim2.new(1, 0, 0, 25), scriptPath, Color3.new(1, 0, 0)
end

return UI
